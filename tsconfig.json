
{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",

    /* Type Safety */
    "strict": true,
    "skipLibCheck": true,

    /* Playwright + Node types */
    "types": ["node", "playwright"],

    /* Paths */
    "rootDir": ".",
    "outDir": "dist",

    /* Interop */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Build behavior */
    "noEmit": true
  },

  "include": [
    "tests/**/*.ts",
    "pages/**/*.ts",
    "playwright.config.ts"
  ]
}
